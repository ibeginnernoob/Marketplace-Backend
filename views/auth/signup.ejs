<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="signup-page">
        <form action="/laptop/signup" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="signup-form">
                <h1 class="signup-welcome">Welcome!</h1>
                <h3 class="signup-form-info">Please fill the form to create your account.</h3>
                <hr class="signup-form-top-end">
                <div class="signup-email-container">
                    <input type="text" placeholder="Email" class="signup-form-input  signup-email-input <% if (emailError) { %>
                        signup-email-input-error
                    <% } %>" name="email">
                    <% if (emailError) { %>
                        <div class="signup-email-error">
                            <%= emailError.msg %>
                        </div>
                    <% } %>
                </div>
                <div class="signup-password-container">
                    <input type="password" id="password" placeholder="Password" class="signup-form-input <% if (passwordError) { %>
                        signup-password-input-error
                    <% } %>" name="password">
                    <span class="signup-toggle-password" onclick="togglePassword()">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </span>
                    <% if (passwordError) { %>
                        <div class="signup-password-error">
                            <%= passwordError.msg %>
                        </div>
                    <% } %>
                </div>
                <div class="signup-password-container">
                    <input type="password" id="confirmPassword" placeholder="Confirm Password" class="signup-form-input" name="confirmPassword">
                    <span class="signup-toggle-confirmPassword" onclick="toggleConfirmPassword()">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="ask-login">Already a member. <a href="/laptop/login">Log In</a></div>
                <button class="signup-form-btn">Sign Up</button>
            </div>
        </form>
        <script>
            function togglePassword() {
                const passwordInput = document.getElementById("password");
                const toggleIcon = document.querySelector(".signup-toggle-password i");
                if(passwordInput.type === "password"){
                    passwordInput.type = "text";
                    toggleIcon.classList.remove("fa-eye");
                    toggleIcon.classList.add("fa-eye-slash");
                } 
                else{
                    passwordInput.type = "password";
                    toggleIcon.classList.remove("fa-eye-slash");
                    toggleIcon.classList.add("fa-eye");
                }
            }
            function toggleConfirmPassword() {
                const passwordInput = document.getElementById("confirmPassword");
                const toggleIcon = document.querySelector(".signup-toggle-confirmPassword i");
                if(passwordInput.type === "password"){
                    passwordInput.type = "text";
                    toggleIcon.classList.remove("fa-eye");
                    toggleIcon.classList.add("fa-eye-slash");
                } 
                else{
                    passwordInput.type = "password";
                    toggleIcon.classList.remove("fa-eye-slash");
                    toggleIcon.classList.add("fa-eye");
                }
            }
        </script>
    </div>
</body>